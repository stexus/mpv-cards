{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",

    "allowJs": false,
    "checkJs": false,
    "noEmit": true,

    "sourceMap": true,
    "preserveConstEnums": true,
    "typeRoots": ["./typings", "./node_modules/@types/"],
    "lib": ["es2015", "es2015.collection", "es2015.promise"],
    "importHelpers": true,
    "moduleResolution": "node",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules"],
  "include": ["./typings/**/*.d.ts", "./src/**/*.ts"]
}
